<table class="table">
  <thead>
    <tr>
      <th class="thread titlename">Title</th>
      <th class="thread bodyname">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @book.each do |book| %>
      <tr>
        <td class="element titlename"><%= book.title %></td>
        <td class="element bodyname"><%= book.body %></td>
        <td class="element"><%= link_to "Show", book_path(book.id) %></td>
        <td class="element"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="element"><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

